// TypeScript configuration tailored for this learning project.
// Important notes for learners:
// - `paths` + `baseUrl` enable nicer import aliases (eg: `import x from 'lib/x'`).
// - `jsx: react-jsx` uses the new automatic runtime for JSX (no React import needed).
// - `noEmit: true` is common in dev setups where bundlers handle output.
{
  "include": [
    "app",
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "app/*": ["app/*"],
      "styles/*": ["app/styles/*"],
      "components/*": ["app/components/*"],
      "lib/*": ["app/lib/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
